mixin breadcrumbs(className, crumbs)
    div(class= className)
        ul(class= className + "__list")
            each bread, ind in crumbs
                li(class="breadcrumbs__item " +
                ((ind == 0) ? 'breadcrumbs__item_first' : '') +
                ((ind == 1) ? 'breadcrumbs__item_second' : '') +
                ((ind == 2) ? 'breadcrumbs__item_last' : '')
                )
                    a(href="#").breadcrumbs__list-link #{bread}