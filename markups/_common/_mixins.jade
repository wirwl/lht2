mixin createSocialButtons(className)
    div(class=className+"__socials")
        ul(class=className+"__socials__list")
            each social in ['vk', 'fb', 'tw']
                li(class=className+"__socials__item")
                    a(href="#" class=className+"__socials__link "+className+"__socials__link_" + social)


mixin createColorPattern(className, rgb, active)
    li.accordeon__inner-item
        div(class=className + "__color-pattern " +
        ((active) ? 'color-pattern_active ' : '') +
        'color-pattern_'+rgb
        )

mixin createListedCheckbox(word)
    li.accordeon__inner-item
        input(type="checkbox" id=word checked).accordeon__inner-checkbox
        label(for=word).accordeon__checkbox-label=word

mixin nav(className, items, activeIndx)
    nav(class= className)
        .centering
            ul(class= className + "__list")
                each item, index in items
                    li(class=className + "__item ")
                        a(href="#" class= className + "__link "+ ((activeIndx == index) ? className + '__item' + '_active' : ''))= item



