        link(rel="stylesheet" type='text/css' href="bower/slider/jquery-ui.css")
        link(rel="stylesheet" type='text/css' href="/css/main.css")
        link(rel="stylesheet" type='text/css' href="bower/select2/dist/css/select2.css")
